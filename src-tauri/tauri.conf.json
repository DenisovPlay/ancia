{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ancia Local",
  "version": "0.1.0",
  "identifier": "com.ancia.localchat",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Ancia Local",
        "width": 1500,
        "height": 960,
        "minWidth": 860,
        "minHeight": 620,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "hiddenTitle": true,
        "visible": false,
        "titleBarStyle": "Overlay",
        "backgroundColor": "#090512",
        "trafficLightPosition": {
          "x": 16,
          "y": 18
        }
      },
      {
        "label": "splash",
        "title": "Ancia Local",
        "url": "splash.html",
        "width": 360,
        "height": 220,
        "center": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "shadow": true,
        "backgroundColor": "#050816",
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "bin/*"
    ]
  }
}
